            android:name=".activities.MatchNoteListActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.MidScoringActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.SavePulledEventActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".activities.ScheduledService"
            tools:ignore="Instantiatable" />
        <activity
            android:name=".activities.AddPlayersB"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.AddPlayersA"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.AddSquad"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.AddMatchOfficials"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activities.SplashScreen"
            android:exported="true"
            android:screenOrientation="fullSensor"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.LoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.RegisterActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.SucessActivity"
            android:screenOrientation="portrait" />
