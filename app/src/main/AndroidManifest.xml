        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@drawable/ball"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:replace="android:theme">
        <activity
            android:screenOrientation="portrait"
            android:name=".activities.ToastActivity"
            android:exported="false" />
        <activity
            android:screenOrientation="portrait"
            android:name=".activities.ConfirmBXI"
            android:exported="true" />
        <activity
            android:screenOrientation="portrait"
            android:name=".activities.ConfirmAXI"
            android:exported="true" />
        <activity
            android:screenOrientation="portrait"
            android:name=".activities.AddEditOfficials"
            android:exported="true" />
        <activity
            android:name=".activities.SubscribeDetails"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.PlayerProfile"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.UserProfile"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.ForgotPassword"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.ChangePassword"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.MatchDetailsActivity"
            android:screenOrientation="portrait" />
