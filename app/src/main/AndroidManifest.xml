            android:name=".activities.CreateMatchActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".AddPlayers"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.PulledMatchDetailsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.SelectTeamAXIActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.SelectTeamBXIActivity"
            android:screenOrientation="portrait" />
