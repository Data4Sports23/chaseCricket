            android:name=".activities.DisplayResultActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.PlayerList"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.PowerPlay"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.AssignedMatchListActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.WagonWheel"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.SubstitutionActivity"
            android:screenOrientation="portrait" />

        <service
            android:name=".activities.ScheduledService"
            android:enabled="true"
            android:icon="@drawable/ball"
            android:label="@string/app_name" />
    </application>

</manifest>