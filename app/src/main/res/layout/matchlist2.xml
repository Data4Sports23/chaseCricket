<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:orientation="horizontal"
    android:id="@+id/list_match"
    android:gravity="center" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/customborder"
        android:weightSum="15"
        android:layout_margin="1dp"
        android:baselineAligned="false">
        <!--        android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"
                android:layout_marginLeft="7dp"
                android:layout_marginStart="7dp"
                android:layout_marginRight="7dp"
                android:layout_marginEnd="7dp">-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3.44"
            android:layout_marginLeft="2dp"
            android:layout_marginStart="2dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/list_slno"
                android:text="1"
                android:textColor="@color/colorBlack"
                android:gravity="center"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.7"
            android:layout_marginStart="5dp"
            android:orientation="vertical"
            android:layout_marginLeft="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/list_teams"
                android:text="aa vs bb"
                android:textColor="@color/colorBlack"
                android:textAllCaps="false"
                android:gravity="center_vertical"
                android:singleLine="false"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/list_type"
                android:text="aa vs bb"
                android:textColor="@color/colorBlack"
                android:textAllCaps="false"
                android:gravity="center_vertical"
                android:singleLine="false"
                android:textSize="14sp"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3.3">


            <ImageView
                android:id="@+id/list_resume_score"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:src="@drawable/edit"
                android:tint="@color/colorText"
                android:paddingLeft="3dp"
                android:paddingStart="3dp"
                android:paddingRight="1dp"
                android:paddingEnd="1dp"
                android:paddingTop="1dp"
                android:paddingBottom="1dp"
                android:foregroundGravity="center"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3.3"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/list_view_score"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_gravity="end"
                android:foregroundGravity="center"
                android:paddingStart="3dp"
                android:paddingLeft="3dp"
                android:paddingTop="1dp"
                android:paddingEnd="1dp"
                android:paddingRight="1dp"
                android:paddingBottom="1dp"
                android:tint="@color/colorText"
                app:srcCompat="@drawable/visibility" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3.3"
            android:gravity="center"
            android:layout_gravity="center" >


            <ImageView
                android:id="@+id/list_delete_score"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:src="@drawable/delete"
                android:tint="@color/colorDelete"
                android:paddingLeft="3dp"
                android:paddingStart="3dp"
                android:paddingRight="1dp"
                android:paddingEnd="1dp"
                android:paddingTop="1dp"
                android:paddingBottom="1dp"
                android:foregroundGravity="center"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>