<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ForgotPassword"
    android:orientation="vertical"
    android:layout_margin="15dp"
    android:background="@drawable/customborder"
    android:fitsSystemWindows="true" >

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="FORGOT PASSWORD"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@color/colorTextHeading"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/fp_tv_title"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorText"
            android:text="Enter email"
            android:layout_marginTop="45dp"
            app:layout_constraintTop_toBottomOf="@id/fp_tv_title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/fp_tv_email" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/customborder"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/fp_tv_email"
            android:paddingLeft="15dp"
            android:paddingStart="15dp"
            android:paddingEnd="5dp"
            android:paddingRight="5dp"
            android:id="@+id/fp_et_email"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/mybutton"
            android:text="SUBMIT"
            app:layout_constraintTop_toBottomOf="@id/fp_et_email"
            android:id="@+id/fp_btn_submit"
            app:layout_constraintRight_toRightOf="parent" />


    </android.support.constraint.ConstraintLayout>

</LinearLayout>