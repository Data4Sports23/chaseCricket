<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.UserProfile"
    android:orientation="vertical"
    android:layout_margin="15dp"
    android:background="@drawable/customborder"
    android:fitsSystemWindows="true" >

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="USER PROFILE"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@color/colorTextHeading"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/up_tv_title"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/up_ll_name"
            android:weightSum="15"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/up_tv_title">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:textColor="@color/colorText"
                android:text="Name"
                android:gravity="center_vertical"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:textColor="@color/colorText"
                android:textStyle="bold"
                android:text=":"
                android:gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:textColor="@color/colorText"
                android:text="Name"
                android:gravity="center_vertical"
                android:id="@+id/up_tv_name"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/up_ll_email"
            android:weightSum="15"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/up_ll_name">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:textColor="@color/colorText"
                android:text="Email"
                android:gravity="center_vertical"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:textColor="@color/colorText"
                android:textStyle="bold"
                android:text=":"
                android:gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:textColor="@color/colorText"
                android:text="Name"
                android:gravity="center_vertical"
                android:id="@+id/up_tv_email"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/up_ll_matches"
            android:weightSum="15"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/up_ll_email">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:textColor="@color/colorText"
                android:text="Scored matches"
                android:gravity="center_vertical"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:textColor="@color/colorText"
                android:textStyle="bold"
                android:text=":"
                android:gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:textColor="@color/colorText"
                android:text="Name"
                android:gravity="center_vertical"
                android:id="@+id/up_tv_matches"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:textColor="@color/colorLink"
            android:text="Change Password"
            android:gravity="center_vertical"
            android:id="@+id/up_tv_change_password"
            app:layout_constraintTop_toBottomOf="@+id/up_ll_matches"
            android:layout_marginTop="25dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/up_ll_signout"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/up_tv_change_password">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/signout"
                android:tint="@color/colorText"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:textColor="@color/colorText"
                android:text="  Signout"
                android:gravity="center_vertical" />

        </LinearLayout>


    </android.support.constraint.ConstraintLayout>

</LinearLayout>